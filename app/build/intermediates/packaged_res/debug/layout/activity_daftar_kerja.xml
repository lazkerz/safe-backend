<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Pelatihan.DaftarKerjaActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="80dp"
            android:background="@color/white"
            android:contentDescription="Kembali ke halaman sebelumnya"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/teks_pt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pt2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/bell2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:background="@color/white"
            android:contentDescription="Ke halaman riwayat"
            android:src="@drawable/ic_bell"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Nama"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

    <EditText
        android:id="@+id/editnama"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_text2"
        android:hint="Tulis nama anda"
        android:padding="12dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_nama"
        app:layout_constraintTop_toBottomOf="@+id/text_nama" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textpendidikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Pendidikan"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/editnama"
        app:layout_constraintTop_toBottomOf="@+id/editnama" />

    <EditText
        android:id="@+id/editpendidikan"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_text2"
        android:hint="Pendidikan terakhir"
        android:padding="12dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textpendidikan"
        app:layout_constraintTop_toBottomOf="@+id/textpendidikan" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textkontak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Kontak"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/editpendidikan"
        app:layout_constraintTop_toBottomOf="@+id/editpendidikan" />

    <EditText
        android:id="@+id/editkontak"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_text2"
        android:hint="Nomor HP"
        android:padding="12dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textkontak"
        app:layout_constraintTop_toBottomOf="@+id/textkontak" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textemail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Email"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/editkontak"
        app:layout_constraintTop_toBottomOf="@+id/editkontak" />

    <EditText
        android:id="@+id/editemail1"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_text2"
        android:hint="Email"
        android:padding="12dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textemail1"
        app:layout_constraintTop_toBottomOf="@+id/textemail1" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Upload Berkas"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/editemail1"
        app:layout_constraintTop_toBottomOf="@+id/editemail1" />

    <EditText

        android:id="@+id/editupload"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_upload"
        android:padding="12dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textupload"
        app:layout_constraintTop_toBottomOf="@+id/textupload" />

    <TextView
        android:id="@+id/text_pesan_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="*Berkas CV, Portofolio, dan dokumen lainnya"
        android:textColor="@color/blue"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/editupload"
        app:layout_constraintTop_toBottomOf="@+id/editupload" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_registerKerja"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_lengkung"
        android:text="Daftar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_pesan_upload" />


</androidx.constraintlayout.widget.ConstraintLayout>