<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".potensi.PotensiActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_komunitas"
        android:layout_width="175dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_komunitas"
        android:fontFamily="@font/poppins_medium"
        android:text="Komunitas"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kegiatan"
        android:layout_width="175dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_kegiatan"
        android:fontFamily="@font/poppins_medium"
        android:text="Kegiatan"
        android:textColor="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <EditText
        android:id="@+id/search"
        android:layout_width="285dp"
        android:layout_height="38dp"
        android:background="@drawable/search_text"
        android:hint="Cari komunitas"
        android:padding="12dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:background="@drawable/ic_search"
        app:layout_constraintBottom_toTopOf="@+id/fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        android:id="@+id/btn_notification"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:background="@drawable/ic_notifications"
        app:layout_constraintBottom_toTopOf="@+id/btn_kegiatan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:background="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@+id/btn_komunitas"
        app:layout_constraintEnd_toStartOf="@+id/search"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />


</androidx.constraintlayout.widget.ConstraintLayout>