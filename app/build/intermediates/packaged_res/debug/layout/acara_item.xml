<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/card_acara"
            android:layout_width="150dp"
            android:layout_height="195dp"
            android:background="@drawable/card_lomba"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/imgacara"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/card_acara"
            app:layout_constraintStart_toStartOf="@id/card_acara"
            app:layout_constraintEnd_toEndOf="@id/card_acara"
            />

        <TextView
            android:id="@+id/acara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Run Party"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="@id/card_acara"
            app:layout_constraintStart_toStartOf="@id/card_acara"
            app:layout_constraintEnd_toEndOf="@id/card_acara"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>