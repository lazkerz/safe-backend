<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Pelatihan.DetailProfilActivity">

    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Profile"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bg_profile"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/bg_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_profile"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="73dp" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ava"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/txt_profile"
        app:layout_constraintStart_toStartOf="@id/bg_profile"
        app:layout_constraintEnd_toEndOf="@id/bg_profile"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edit"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Nama Lengkap"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_nama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_nama"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg_edit_text2"
        android:fontFamily="@font/poppins_regular"
        android:hint="Nama Lengkap"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/bg_profile"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@id/bg_profile"
        app:layout_constraintTop_toTopOf="@id/bg_profile" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Alamat Email"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edit_text2"
        android:fontFamily="@font/poppins_regular"
        android:hint="Alamat Email"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <TextView
        android:id="@+id/txt_pass"
        android:layout_width="330dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Password"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="@+id/bg_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit_text2"
        android:fontFamily="@font/poppins_regular"
        android:hint="Ganti Password"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pass" />

    <Button
        android:id="@+id/simpan"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textSize="14dp"
        android:text="Simpan"
        android:fontFamily="@font/poppins_semibold"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/bg_profile"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@id/bg_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass" />
</androidx.constraintlayout.widget.ConstraintLayout>