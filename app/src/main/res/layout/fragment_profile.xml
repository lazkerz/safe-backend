<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.profile.ProfileFragment">


    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bg_profile"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/bg_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_profile"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="29dp" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ava"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/txt_profile"
        app:layout_constraintStart_toStartOf="@id/bg_profile"
        app:layout_constraintEnd_toEndOf="@id/bg_profile"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edit"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"/>

    <ImageButton
        android:id="@+id/detail_profile"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/detail_profile"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="@id/bg_profile"
        app:layout_constraintStart_toStartOf="@id/bg_profile"
        app:layout_constraintEnd_toEndOf="@id/bg_profile"/>

    <ImageButton
        android:id="@+id/out"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/out"
        app:layout_constraintEnd_toEndOf="@id/bg_profile"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@id/bg_profile"
        app:layout_constraintTop_toBottomOf="@+id/detail_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>