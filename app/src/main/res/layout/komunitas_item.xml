<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="3dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/card_kerja">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivanti"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="clip_horizontal"
            android:src="@drawable/ava_post" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/komunitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="komunitas"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/namaakun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10dp"
                android:hint="nama"
                android:textColor="@color/black">
            </TextView>


    </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/isipost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:hint="isi postingan"
            android:textColor="@color/black">
        </TextView>

        <ImageView
            android:id="@+id/imgpost"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_post"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_like"
                android:layout_gravity="clip_horizontal" />

            <ImageButton
                android:id="@+id/btn_komen"
                android:layout_width="85dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_komen"
                android:layout_gravity="clip_horizontal" />

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_share"
                android:layout_gravity="clip_horizontal" />

            <ImageButton
                android:id="@+id/btn_simpan"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/btn_save"
                android:layout_gravity="clip_horizontal" />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>